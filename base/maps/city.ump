	fh	+il	+fg	+f	+f	+fh	+i	+i	+i	fg
	jkb	+a	+j	+j	+j	+j	+da	+d	+da	k
	jkb	+a	+j	+j	+j	+j	+ca	+c	+ca	k
	jkb	+a	+j	+j	+j	+j	+ca	+c	+ca	k
	jkb	+a	+j	+j	+j	+j	+ea	+e	+ea	k
	fh	+il	+fg	+f	+f	+fh	+i	+i	+i	fg
	0	a	j	j	j	j	ea	e	ea	0
}

// --------------------
// Street Intersections


// Street intersection with rail line
tile +str_rail_cross
{
	5 3
	0		be		be		be		0
	h		+i		+i		+i		g
	0		bd		bd		bd		0
}

// Street intersection without rail line
tile +str_cross
{
	3 3
	0		abe		0
	fh		l		fg
	0		abe		0
}

// ---------------------
// Vertical Street Tiles

	// Vertical street base tile (straight lines painted)
	tile +strv_1a
	{
		3 3
		0		a		0
		jk		a		jk
		0		a		0
	}

	// Vertical street with rail station
	// 	- Subway exits bottom left and right
	tile +strv_rail_1a
	{
		5 6
		0		i		i		i		0
		j		+ba		+b		+ba		k
		j		+ba		+b		+ba		k
		j		+ba		+b		+ba		k
		s		+tba	+b		+tba	s
		0		i		i		i		0
	}

	// Vertical street with rail line (borders intersection at top)
	// Includes the big billboard machine
	tile +strv_rail_top2a
	{
		5 3
		0		i		i		i		0
		j		+da		+d		+da		k
		0		c		c		c		0
	}

	// Vertical street with rail line (borders intersection at top)
	tile +strv_rail_top2b
	{
		5 3
		0		i		i		i		0
		j		+da		+d		+da		k
		0		c		c		c		0
	}

	// Vertical street with rail line (borders intersection at bottom)
	tile +strv_rail_btm2a
	{
		5 3
		0		c		c		c		0
		j		+ea		+e		+ea		k
		0		i		i		i		0
	}

	// Vertical street with rail line (doesn't border intersection)
	tile +strv_rail_2a
	{
		5 3
		0		cd		cd		cd		0
		j		+ca		+c		+ca		k
		0		ce		ce		ce		0
	}

