// ==================
// SINGLE PLAYER MENU
// ==================

menu singleplayer
{
	// ==================
	// don't render
	// ==================

	zone render
	{
		invis true
	}

	// ==================
	// background
	// ==================

	pic background
	{
		image	menu/main_bg
	}

	string version
	{
		string	"*cvar version"
		pos		"10 744"
	}

	// ==================
	// buttons
	// ==================

	custombutton button_new
	{
		pos	"640 170"
		size "256 64"
		click	{ cmd "game_exit; mn_push campaigns;" }
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_New game"
	}

	custombutton button_load
	{
		pos	"640 240"
		size "256 64"
		click	{ cmd "mn_push load;" }
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Load"
	}

	custombutton button_save_na
	{
		// only if we have no game started yet
		if "mn_main ne singleplayerInGame"
		tooltip	"_No game to save"
		pos	"640 310"
		size "256 64"
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Save"
	}

	custombutton button_save
	{
		// only if we already have a game started
		if "mn_main eq singleplayerInGame"
		pos	"640 310"
		size "256 64"
		click	{ cmd "mn_push save;" }
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Save"
	}

	custombutton button_continue
	{
		if "mn_lastsave"
		tooltip	"_Load last saved game or continue playing"
		pos	"640 380"
		size "256 64"
		click	{ cmd "game_continue;" }
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Continue"
	}

	custombutton button_back
	{
		pos	"640 520"
		size "256 64"
		click	{ cmd "game_exit;mn_pop;" }
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Back"
	}

	func init
	{
		// sv_ai might be deactivated because we were in the multiplayer menu before
		cmd "set sv_ai 1;"
	}
}

menu singleplayerInGame extends singleplayer
{
	// over-ride button_new with a continue button
	custombutton button_new
	{
		pos	"640 170"
		size "256 64"
		click	{ cmd "game_continue;" }
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Continue"
	}

	// over-ride button_continue with a continue button
	custombutton button_continue
	{
		pos	"640 170"
		size "256 64"
		image	menu/button_big
		font	f_menubig
		invis	true
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Continue"
	}

	custombutton button_options
	{
		pos	"640 380"
		size "256 64"
		click	{ cmd "mn_push options;" }
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Options"
	}

	custombutton button_back
	{
		pos	"640 520"
		size "256 64"
		click	{ cmd "game_exit;mn_pop;" }
		image	menu/button_big
		font	f_menubig
		color	"0 0.5 0 1"
		selectcolor "1 1 1 1"
		string	"_Exit"
	}
}

