// ==================
// QUICK LOAD MENU
// ==================

menu quickload
{
	{
		pos	"264 262"
		size	"496 247"
	}

	zone popup
	{
		invis true
	}
	windowpanel back
	{
		image	menu/popup_alpha_tile
		pos	"0 0"
		size	"496 247"
		blend	true
	}

	string title
	{
		string	"_Reload campaign"
		pos	"26 18"
		font	f_big
	}

	text name_label
	{
		string	"_Are you sure that you really want to reload the last automatically saved campaign state?"
		pos		"26 58"
		size	"440 64"
		lineheight	"16"
		rows	4
	}

	pic bt_cancel
	{
		tooltip	"_Close this dialogue"
		image	menu/multi_buttons3
		texh	"176 64"
		texl	"0 32"
		pos	"46 188"
		size	"176 32"
		out	{ *string_cancel color "0 0.5 0 1" *bt_cancel image menu/multi_buttons3 }
		in	{ *string_cancel color "1 1 1 1" *bt_cancel image menu/multi_buttons3a }
		click	{ cmd "mn_pop;" }
	}
	string string_cancel
	{
		font	f_menu
		color	"0 0.5 0 1"
		string	"_Cancel"
		pos	"134 204"
		align	cc
	}

	pic bt_go
	{
		tooltip	"_Reload the last automatically saved campaign state"
		image	menu/multi_buttons3
		pos	"266 188"
		size	"176 32"
		texh	"176 64"
		texl	"0 32"
		out	{ *bt_go image menu/multi_buttons3 *string_go color "0 0.5 0 1" }
		in	{ *bt_go image menu/multi_buttons3a *string_go color "1 1 1 1" }
		click	{ cmd "game_quickload;" }
	}
	string string_go
	{
		font	f_menu
		color	"0 0.5 0 1"
		string	"_Reload"
		pos	"354 204"
		align	cc
	}
	func init
	{
		cmd "game_quickloadinit;"
	}
}

