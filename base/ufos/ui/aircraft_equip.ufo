	/**
	 * @brief Call when the user select a UI zone
	 * @param[in] <1> zone we want to select (zone1, zone2, slot, item)
	 * slot: aircraft slot
	 * item: An item into the item list
	 */
	confunc airequip_select {
		if ( <1> eq "zone1" ) {
			*node:root.airequip_zone_select1@image  = "ui/airequip_selected_element"
			*node:root.airequip_zone_select2@image  = ""
			*cvar:mn_aircraft_item_selected = -1
			*node:root.itemlist@image = "ui/panel_grey_green"
			cmd "airequip_zone_select 1;"
		} elif ( <1> eq "zone2" ) {
			*node:root.airequip_zone_select1@image  = ""
			*node:root.airequip_zone_select2@image  = "ui/airequip_selected_element"
			*cvar:mn_aircraft_item_selected = -1
			*node:root.itemlist@image = "ui/panel_grey_green"
			cmd "airequip_zone_select 2;"
		} elif ( <1> eq "slot" ) {
			*cvar:tmp = ""
			if ( *cvar:mn_aircraft_item_selected != -1 ) {
				*cvar:tmp = "item"
			} elif ( *node:parent.airequip_zone_select2@image eq "" ) {
				*cvar:tmp = "zone1"
			} else {
				*cvar:tmp = "zone2"
			}
			cmd "airequip_slot_select <2> <cvar:tmp>;"
			delete *cvar:tmp
		} elif ( <1> eq "item" ) {
			*node:root.airequip_zone_select1@image  = ""
			*node:root.airequip_zone_select2@image  = ""
			*node:root.itemlist@image = "ui/panel_grey_white"
			*cvar:mn_aircraft_item_selected = <2>
			cmd "airequip_list_click <2>;"
		}
	}

