	textlist employee_list
	{
		dataid		TEXT_LIST
		pos			"45 170"
		width		280
		lineheight	38
		tabwidth	100
		rows		"15"
		color		"0 .78 0 1"
		selectcolor	"1 1 1 1"
		onClick			{ cmd "employee_select <lineselected>;" }
		onViewChange	{
			*node:root.scroll@fullsize = <fullsize>
			*node:root.scroll@current = <viewpos>
			*node:root.scroll@viewsize = <viewsize>
			cmd "employee_scroll <viewpos>;"
		}
	}

