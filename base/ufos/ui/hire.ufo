component checkbox cmpSelect
{
		tooltip		"_Hire/Unhire - Right click to remove"
		current		0
		image		"ui/checkbox_green"
		size		"20 20"
		onChange	{ cmd "employee_hire <num>;" }
		onRClick		{ cmd "employee_delete <num>;" }
}

