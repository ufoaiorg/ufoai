		func hudenable_floor
		{
			*cvar:tmp = ( <1> + 1 )
			*cvar:i = 1
			while ( *cvar:i < *cvar:tmp ) {
				*floor.bar_teambox<cvar:i>@invis = false  *floor.bar_teamsep<cvar:i>@invis = false  *floor.head<cvar:i>@invis = false
				*cvar:i = ( *cvar:i + 1 )
			} 

			while ( *cvar:tmp < 8 ) {
				*floor.bar_teambox<cvar:tmp>@invis = true  *floor.bar_teamsep<cvar:tmp>@invis = true  *floor.head<cvar:tmp>@invis = true
				*cvar:tmp = ( *cvar:tmp + 1 )
			}
			
			delete *cvar:tmp
			delete *cvar:i
			
			*floor.bar_teamright@left = ( *node:root.floor.bar_teambox<1>@left + *node:root.floor.bar_teambox<1>@width )
		}
			
