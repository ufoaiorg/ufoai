// ==================
// EMPTY HUD
// ==================
// with console command forwarding

window hud_nohud extends hud
{
	{
		fill		true
		starlayout	true
	}

	func showinventory
	{
		cmd "ui_push hudinv;"
	}

	// ==================
	// render rectangle
	// ==================
	battlescape render
	{
		align	LAYOUTALIGN_FILL
	}

	confunc hidehud {
		if (*cvar:cl_onbattlescape == 1) {
			cmd "ui_push hud_nohud"
		}
	}

}
