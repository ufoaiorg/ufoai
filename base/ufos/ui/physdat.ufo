// ==================
// PHYSDATA BASE MENU
// ==================

window physdata
{
	{
		pos			"256 96"
		size		"512 512"
	}

	// ==================
	// background
	// ==================

	pic bar_physdata
	{
		image		hud/bar_phys
		pos			"0 0"
	}

	string actorname
	{
		string		*cvar:mn_name
		pos			"26 25"
		size		"165 20"
	}

	controls drag {
		pos		"10 10"
		size	"200 50"
	}

	// ==================
	// model
	// ==================

	model actor
	{
		{
			model		*cvar:mn_body
			skin		*cvar:mn_skin
			anim		"stand2"
			angles		"0 70 90"
			pos			"27 73"
			size		"188 263"
			autoscale	true
		}

		model head
		{
			model		*cvar:mn_head
			skin		*cvar:mn_skin
			tag			"tag_head"
		}
	}

	// ==================
	// abilities
	// ==================

	string pwr_lbl { pos "220 32" size "150 20" string "_Strength:" }
	string pwr_val { pos "365 32" size "120 20"  string *cvar:mn_tpwr textalign ur }
	pic pwr_bdr    { pos "222 48"  image ui/bar_border }
	tbar pwr_bar   { pos "226 48"  current *cvar:mn_vpwr texl "3 0" image ui/bar_attribute size "250 16"	max 100 }

