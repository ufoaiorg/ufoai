		scale		2.0
	}

	// ==================
	// buttons
	// ==================

	custombutton button_exit
	{
		image		ui/button_background
		pos			"428 458"
		size		"64 37"
		icon		return
		onClick		{ cmd "mn_pop;" }
	}
